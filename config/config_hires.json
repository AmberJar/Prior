{
    "name": "PriorNet",
    "num_classes": 19,
    "batch_size": 8,

    "model": {
        "type": "HRNet_W48_OCR",
        "args": {
            "backbone": "hrnet48",
            "weight_path": ""
        }
    },

    "train_loader": {
        "data_dir": "/data/fpc/data/Cityscapes_512_1024/Cityscapes",
        "split": "train",
        "num_workers": 8
    },

    "val_loader": {
        "data_dir": "/data/fpc/data/Cityscapes_512_1024/Cityscapes",
        "split": "val",
        "num_workers": 8
    },

    "optimizer": {
        "type": "AdamW",
        "lr": 1e-4,
        "weight_decay": 1e-4,
        "betas": [0.8, 0.99]
    },

    "loss": "LSCE_GDLoss",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "WarmUpLR_CosineAnnealing",
        "warmup_epochs": 3
    },

    "trainer": {
        "epochs": 2000,
        "fp16": true,
        "save_dir": "/data/fangpengcheng/saved/",
        "save_period": 1,

        "monitor": "max Mean_IoU",
        "early_stop": 300,

        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 1,

        "val": true,
        "val_per_epochs": 1
    },

    "ema": {
        "use": false,
        "weight": 0.999
    }
}

