{
    "name": "Potsdam",
    "num_classes": 6,
    "batch_size": 2,
    "use_checkpoint": "",

    "model": {
        "type": "HRNet_W48_OCR",
        "args": {
            "backbone": "hrnet48"
        }
    },

    "train_loader": {
        "data_dir": "/data/fpc/data/seed0_512",
        "split": "train",
        "num_workers": 0
    },

    "val_loader": {
        "data_dir": "/data/fpc/data/seed0_512",
        "split": "val",
        "num_workers": 0
    },

    "optimizer": {
        "type": "AdamW",
        "lr": 1e-4,
        "weight_decay": 1e-4,
        "betas": [0.8, 0.99]
    },

    "loss": "LSCE_GDLoss",
    "ignore_index": 255,
    "alpha": 1,
    "lr_scheduler": {
        "type": "WarmUpLR_CosineAnnealing",
        "warmup_epochs": 5
    },

    "trainer": {
        "epochs": 400,
        "fp16": false,
        "cutmix": true,
        "save_dir": "/data/fpc/saved/",
        "save_period": 1,

        "monitor": "max Mean_IoU",
        "early_stop": 300,

        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 1,

        "val": true,
        "val_per_epochs": 1
    },

    "ema": {
        "use": false,
        "weight": 0.999
    }
}

